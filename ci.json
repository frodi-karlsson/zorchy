{
  "$schema": "./schema.json",
  "entryPoint": "build zorchy",
  "workflows": [
    {
      "name": "build zorchy",
      "task": {
        "Shell": {
          "command": "sh",
          "args": ["-c", "zig build"]
        }
      },
      "onComplete": "run tests"
    },
    {
      "name": "run tests",
      "task": {
        "Shell": {
          "command": "sh",
          "args": ["-c", "zig build test"]
        }
      },
      "onComplete": "run integration tests"
    },
    {
      "name": "run integration tests",
      "task": {
        "Shell": {
          "command": "sh",
          "args": ["-c", "zig build integration"]
        }
      }
    }
  ]
}
